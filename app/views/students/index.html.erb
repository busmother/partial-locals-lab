<h4>Search for a student:</h4>

<%= form_tag students_path, :method => 'get' do%>
    <%= label_tag(:search, "Search for a student:") %>
    <%= text_field_tag :search, params[:search]%>
    <%= submit_tag ("Search")%>
<%end%>

<ul>
<% @students.each do |s|%>
    <li><%= render partial: 'student', locals: {student: s}%></li>
<%end%>
</ul>

